<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bupt.iheath.ui.UserInfoEditActivity">

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/supervisor_phone"
        android:inputType="phone"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:hint="监护人号码"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelText="号码" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/supervisor_email"
        android:inputType="textEmailAddress"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:hint="监护人邮箱"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelText="邮箱"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/supervisor_password"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:hint="监护人登录密码"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelText="密码"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/emergency_sms"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:hint="紧急短信内容"
        android:maxLines="6"
        android:minLines="3"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelText="短信内容"
        app:met_maxCharacters="60" />

</LinearLayout>
